    <!--  ChannelButton  -->
    <ControlTemplate x:Key="ChannelButton" TargetType="Button">
        <Border Margin="20,0,20,0" VerticalAlignment="Center">
            <Image
                Width="45"
                Height="45"
                Source="{DynamicResource ResourceKey=Img}"
                Stretch="Fill">
                <Image.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="MinWidth"
                                    To="65"
                                    Duration="0:0:0.2" />

                                <DoubleAnimation
                                    Storyboard.TargetProperty="MinHeight"
                                    To="65"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="MinWidth"
                                    To="45"
                                    Duration="0:0:0.2" />

                                <DoubleAnimation
                                    Storyboard.TargetProperty="MinHeight"
                                    To="45"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
        </Border>
    </ControlTemplate>

    <!--  SettingsButton  -->
    <Style x:Key="SettingsButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Grid Name="Btn">
                        <Border
                            Name="BtnBorder"
                            Background="{DynamicResource ButtonBackgroundColorSCB}"
                            CornerRadius="5">
                            <TextBlock
                                Name="textBlock"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="{DynamicResource ButtonTextColorSCB}"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=Btn}" Value="True">
                                            <Setter Property="Margin" Value="-5,-2,-5,0" />

                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="{DynamicResource ButtonShadowEffectColor}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonOverTextColor}"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="FontSize"
                                                To="15"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>

                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonLeaveTextColor}"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="FontSize"
                                                To="13"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

