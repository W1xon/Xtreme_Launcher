    <!--  ButtonStyle  -->
    <Style x:Key="StyleSelectButton" TargetType="Button">
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="90" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Name="Btn">
                        <Border
                            Name="BtnBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5">
                            <TextBlock
                                Name="textBlock"
                                Height="{TemplateBinding Height}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Content}"
                                TextWrapping="Wrap" />
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=Btn}" Value="True">
                                            <Setter Property="Margin" Value="-5,-2,-5,0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="FontSize"
                                                To="15"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>

                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="FontSize"
                                                To="13"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="SelectButton"
        BasedOn="{StaticResource StyleSelectButton}"
        TargetType="Button">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Offset="0" Color="Lime" />
                    <GradientStop Offset="1" Color="#FF0E0B1C" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

