    <!--  PlayButton  -->
    <Style x:Key="PlayButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Name="Btn" Height="50">
                        <Border Background="{DynamicResource ButtonPlayBackgroundColorSCB}">
                            <Border.CornerRadius>
                                <CornerRadius BottomRight="23" TopLeft="10" />
                            </Border.CornerRadius>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonPlayOverBackgroundColor}"
                                                Duration="0:0:0.5" />
                                            <ColorAnimation
                                                Storyboard.TargetName="lblPlay"
                                                Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonPlayOverTextColor}"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonPlayLeaveBackgroundColor}"
                                                Duration="0:0:0.5" />

                                            <ColorAnimation
                                                Storyboard.TargetName="lblPlay"
                                                Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonPlayLeaveTextColor}"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Label
                                Name="lblPlay"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                FontFamily="Res/Fonts/NebulosaBlackItalic.otf#Nebulosa Black Italic"
                                FontSize="20"
                                Foreground="{DynamicResource ButtonPlayTextColorSCB}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

