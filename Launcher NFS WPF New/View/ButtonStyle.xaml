    <!--  ChannelButton  -->
    <ControlTemplate x:Key="CircleButton" TargetType="Button">
        <Border
            Margin="15,0,15,0"
            VerticalAlignment="Center"
            BorderBrush="{DynamicResource ButtonBackgroundColorSCB}"
            BorderThickness="5"
            CornerRadius="50,50,50,50">
            <Image
                x:Name="image"
                Width="60"
                Height="60"
                Source="{DynamicResource ResourceKey=Img}"
                Stretch="Fill">
                <Image.Clip>
                    <EllipseGeometry
                        x:Name="ellipseGeometry"
                        Center="30,30"
                        RadiusX="30"
                        RadiusY="30" />
                </Image.Clip>
            </Image>
            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">

                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="image"
                                Storyboard.TargetProperty="MinWidth"
                                To="85"
                                Duration="0:0:0.2" />

                            <DoubleAnimation
                                Storyboard.TargetName="image"
                                Storyboard.TargetProperty="MinHeight"
                                To="85"
                                Duration="0:0:0.2" />


                            <PointAnimation
                                Storyboard.TargetName="ellipseGeometry"
                                Storyboard.TargetProperty="Center"
                                To="42.5,42.5"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="ellipseGeometry"
                                Storyboard.TargetProperty="RadiusX"
                                To="42.5"
                                Duration="0:0:0.2" />

                            <DoubleAnimation
                                Storyboard.TargetName="ellipseGeometry"
                                Storyboard.TargetProperty="RadiusY"
                                To="42.5"
                                Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="image"
                                Storyboard.TargetProperty="MinWidth"
                                To="60"
                                Duration="0:0:0.2" />

                            <DoubleAnimation
                                Storyboard.TargetName="image"
                                Storyboard.TargetProperty="MinHeight"
                                To="60"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="ellipseGeometry"
                                Storyboard.TargetProperty="RadiusX"
                                To="30"
                                Duration="0:0:0.2" />

                            <DoubleAnimation
                                Storyboard.TargetName="ellipseGeometry"
                                Storyboard.TargetProperty="RadiusY"
                                To="30"
                                Duration="0:0:0.2" />
                            <PointAnimation
                                Storyboard.TargetName="ellipseGeometry"
                                Storyboard.TargetProperty="Center"
                                To="30,30"
                                Duration="0:0:0.2" />

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>
    </ControlTemplate>

    <!--  RoundedImageButton  -->
    <ControlTemplate x:Key="RoundedImageButton" TargetType="Button">
        <Border
            Margin="15,0,15,0"
            VerticalAlignment="Center"
            BorderBrush="{DynamicResource ButtonBackgroundColorSCB}"
            BorderThickness="5"
            CornerRadius="20">
            <Grid>
                <Image
                    x:Name="image"
                    Width="120"
                    Height="120"
                    Source="{DynamicResource ResourceKey=Img}"
                    Stretch="Uniform">
                    <Image.Clip>
                        <RectangleGeometry
                            x:Name="clipGeometry"
                            RadiusX="20"
                            RadiusY="20"
                            Rect="0,0,120,120" />
                    </Image.Clip>
                </Image>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="image"
                                    Storyboard.TargetProperty="Width"
                                    To="150"
                                    Duration="0:0:0.2" />

                                <DoubleAnimation
                                    Storyboard.TargetName="image"
                                    Storyboard.TargetProperty="Height"
                                    To="150"
                                    Duration="0:0:0.2" />

                                <RectAnimation
                                    Storyboard.TargetName="clipGeometry"
                                    Storyboard.TargetProperty="Rect"
                                    To="0,0,150,150"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="image"
                                    Storyboard.TargetProperty="Width"
                                    To="120"
                                    Duration="0:0:0.2" />

                                <DoubleAnimation
                                    Storyboard.TargetName="image"
                                    Storyboard.TargetProperty="Height"
                                    To="120"
                                    Duration="0:0:0.2" />

                                <RectAnimation
                                    Storyboard.TargetName="clipGeometry"
                                    Storyboard.TargetProperty="Rect"
                                    To="0,0,120,120"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>
            </Grid>
        </Border>
    </ControlTemplate>



    <!--  SettingsButton  -->
    <Style x:Key="SettingsButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Grid Name="Btn">
                        <Border
                            Name="BtnBorder"
                            Background="{DynamicResource ButtonBackgroundColorSCB}"
                            CornerRadius="5">
                            <TextBlock
                                Name="textBlock"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="{DynamicResource ButtonTextColorSCB}"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=Btn}" Value="True">
                                            <Setter Property="Margin" Value="-5,-2,-5,0" />

                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="{DynamicResource ButtonShadowEffectColor}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonOverTextColor}"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="FontSize"
                                                To="15"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>

                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="{DynamicResource ButtonLeaveTextColor}"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="textBlock"
                                                Storyboard.TargetProperty="FontSize"
                                                To="13"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

